  <div class="image-text-container">
 <h2>Live Embroidery Events</h2>
     <!--buttons-->
  <div class="flex flex-wrap items-center justify-center gap-4">
    <!-- FREE Quote (External Link) -->
    <a href="/free-quote-for-live-events/" target="_blank"
        class="relative px-6 py-3 text-base font-bold uppercase text-white transition-all duration-300 transform
        after:content-[''] after:absolute after:left-0 after:bottom-0 after:h-[2px] after:w-0 after:bg-gray-400 after:transition-all after:duration-300 hover:after:w-full">
        FREE Quote
    </a>

    <!-- Vertical Line Separator -->
    <div class="h-6 w-[1px] bg-gray-400 hidden md:block"></div>

    <!-- FAQs (On-Page Anchor) -->
    <a href="#faqs"
        class="relative px-6 py-3 text-base font-bold uppercase text-white transition-all duration-300 transform
        after:content-[''] after:absolute after:left-0 after:bottom-0 after:h-[2px] after:w-0 after:bg-gray-400 after:transition-all after:duration-300 hover:after:w-full">
        FAQs
    </a>

    <!-- Vertical Line Separator -->
    <div class="h-6 w-[1px] bg-gray-400 hidden md:block"></div>

    <!-- Event Videos (External Link) -->
